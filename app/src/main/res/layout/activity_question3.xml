<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCBDE8"
    tools:context=".Question3">

  <TextView
      android:id="@+id/q3"
      android:layout_width="209dp"
      android:layout_height="48dp"
      android:layout_marginTop="104dp"
      android:layout_marginBottom="49dp"
      android:text="Question #3"
      android:textAlignment="center"
      android:textSize="34sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/question3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/question3"
      android:layout_width="386dp"
      android:layout_height="33dp"
      android:layout_marginStart="11dp"
      android:layout_marginEnd="11dp"
      android:layout_marginBottom="26dp"
      android:text="Who is the first inventor of Mobile Phones?"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/choices3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/q3" />

  <RadioGroup
      android:id="@+id/choices3"
      android:layout_width="178dp"
      android:layout_height="0dp"
      android:layout_marginBottom="25dp"
      app:layout_constraintBottom_toTopOf="@+id/cbtn"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/question3">

    <RadioButton
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Martin Luther King"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/c2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Martin Cooper"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/c3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Martin Nievera"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/c4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Martin Lawrence"
        android:textSize="16sp" />
  </RadioGroup>

  <Button
      android:id="@+id/cbtn"
      android:layout_width="150dp"
      android:layout_height="56dp"
      android:layout_marginBottom="179dp"
      android:backgroundTint="#735AA3"
      android:text="Submit Answer"
      android:textAlignment="center"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/choices3" />
</androidx.constraintlayout.widget.ConstraintLayout>